{
    "name": "u1js",
    "version": "0.0.1",
    "description": "Core Library for UINL",
    "main": "dist/main.js",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc && rollup --config rollup.config.mjs && cp bundle/lib.js examples/lib.js",
        "lint": "eslint src",
        "test": "pnpm build && NODE_OPTIONS=--experimental-vm-modules jest --verbose",
        "format": "prettier --write src examples",
        "prepare": "husky",
        "clean": "rm -rf dist node_modules bundle examples/lib.js",
        "serve": "open examples/helloworld.html"
    },
    "keywords": [
        "UI Library"
    ],
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@jest/globals": "^29.7.0",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/eslint__js": "^8.42.3",
        "@types/jsdom": "^21.1.7",
        "eslint": "^9.9.1",
        "glob": "^11.0.0",
        "husky": "^9.1.5",
        "jest": "^29.7.0",
        "jsdom": "^25.0.0",
        "lint-staged": "^15.2.10",
        "live-server": "^1.2.2",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "rollup": "^4.21.2",
        "tslib": "^2.7.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.4.0"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "eslint"
        ]
    }
}
